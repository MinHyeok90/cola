<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bluetooth_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.cola.BluetoothTestActivity">

    <Button
        android:text="Bluetooth Service 시작"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothConnectButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <Button
        android:text="db 확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_db"
        android:layout_below="@+id/bluetoothConnectButton"
        android:layout_alignParentStart="true" />

    <Button
        android:text="친구 분석"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/find_friends"
        android:layout_below="@+id/drop_db"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Service 강제 종료"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothDisconnectButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="db 초기화"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drop_db"
        android:layout_below="@+id/bluetoothDisconnectButton"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bluetoothTestTextView"
        android:layout_below="@+id/find_friends"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
