<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id = "@+id/idinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : "
        android:layout_toStartOf="@+id/editText2" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/idinput" />

    <TextView
        android:id = "@+id/idoutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password : "
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/idoutput"
        android:layout_toEndOf="@+id/idoutput"
        android:id="@+id/editText2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "확인"
        android:layout_alignTop="@+id/sign"
        android:layout_toEndOf="@+id/sign"
        android:id="@+id/complict" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "회원가입"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:id="@+id/sign" />
    <com.google.android.gms.common.SignInButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sign_in_gmail"
        android:layout_below="@+id/complict"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Sign out"
        android:id="@+id/sign_out_gmail"
        android:layout_below="@+id/sign"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />
    <TextView
        android:id = "@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="status"
        android:layout_above="@+id/detail"
        android:layout_alignParentStart="true" />
    <TextView
        android:id = "@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="detail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>